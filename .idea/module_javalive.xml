<?xml version="1.0" encoding="UTF-8"?>
<project name="module_javalive" default="compile.module.javalive">
  <dirname property="module.javalive.basedir" file="${ant.file.module_javalive}"/>
  
  <property name="module.jdk.home.javalive" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.javalive" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.javalive" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.javalive" value="-encoding UTF-8 -source 10 -target 10 ${compiler.args}"/>
  
  <property name="javalive.output.dir" value="undefined"/>
  <property name="javalive.testoutput.dir" value="undefined"/>
  
  <path id="javalive.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="javalive.module.production.classpath">
    <path refid="${module.jdk.classpath.javalive}"/>
  </path>
  
  <path id="javalive.runtime.production.module.classpath"/>
  
  <path id="javalive.module.classpath">
    <path refid="${module.jdk.classpath.javalive}"/>
  </path>
  
  <path id="javalive.runtime.module.classpath"/>
  
  
  <patternset id="excluded.from.module.javalive">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.javalive">
    <patternset refid="excluded.from.module.javalive"/>
  </patternset>
  
  
  <target name="compile.module.javalive" depends="compile.module.javalive.production,compile.module.javalive.tests" description="Compile module JavaLive"/>
  
  <target name="compile.module.javalive.production" depends="register.custom.compilers" description="Compile module JavaLive; production classes"/>
  
  <target name="compile.module.javalive.tests" depends="register.custom.compilers,compile.module.javalive.production" description="compile module JavaLive; test classes" unless="skip.tests"/>
  
  <target name="clean.module.javalive" description="cleanup module">
    <delete dir="${javalive.output.dir}"/>
    <delete dir="${javalive.testoutput.dir}"/>
  </target>
</project>